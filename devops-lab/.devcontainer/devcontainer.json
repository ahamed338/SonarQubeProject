{
  "name": "SonarQube Dev Environment",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.11"
    },
    "ghcr.io/devcontainers/features/terraform:1": {}
  },
  "postCreateCommand": "apt-get update && apt-get install -y curl unzip jq && curl -fsSL https://raw.githubusercontent.com/helm/helm/main/scripts/get-helm-3 | bash",
  "customizations": {
    "vscode": {
      "extensions": [
        "hashicorp.terraform",
        "ms-azuretools.vscode-docker",
        "redhat.vscode-yaml",
        "ms-python.python",
        "eamodio.gitlens"
      ]
    }
  },
  "remoteUser": "vscode"
}
